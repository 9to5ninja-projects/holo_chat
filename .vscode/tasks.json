{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Compile Extension",
      "type": "shell",
      "command": "npm",
      "args": [
        "run",
        "compile"
      ],
      "options": {
        "cwd": "${workspaceFolder}/vscode-holographic-memory"
      },
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "Test Python Components",
      "type": "shell",
      "command": "python",
      "args": [
        "validate_system.py"
      ],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    }
  ]
}