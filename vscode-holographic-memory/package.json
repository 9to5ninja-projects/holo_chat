{
  "name": "vscode-holographic-memory",
  "displayName": "Holographic Memory",
  "description": "VS Code extension for Lumina Memory System with holographic memory visualization",
  "version": "1.0.0",
  "publisher": "lumina-memory",
  "engines": {
    "vscode": "^1.103.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:holographicMemory.showMemoryExplorer"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "holographicMemory.showMemoryExplorer",
        "title": "Show Memory Explorer",
        "category": "Holographic Memory"
      },
      {
        "command": "holographicMemory.explainWithLLM",
        "title": "Explain with LLM",
        "category": "Holographic Memory"
      },
      {
        "command": "holographicMemory.indexWorkspace",
        "title": "Index Workspace for Annotations",
        "category": "Holographic Memory"
      },
      {
        "command": "holographicMemory.showAnnotations",
        "title": "Show All Annotations",
        "category": "Holographic Memory"
      },
      {
        "command": "holographicMemory.refresh",
        "title": "Refresh Memory Explorer",
        "category": "Holographic Memory"
      },
      {
        "command": "holographicMemory.showErrorStats",
        "title": "Show Error Statistics",
        "category": "Holographic Memory"
      },
      {
        "command": "holographicMemory.exportErrorLog",
        "title": "Export Error Log",
        "category": "Holographic Memory"
      },
      {
        "command": "holographicMemory.clearErrorLog",
        "title": "Clear Error Log",
        "category": "Holographic Memory"
      },
      {
        "command": "holographicMemory.goToDefinition",
        "title": "Go to Definition",
        "category": "Holographic Memory"
      },
      {
        "command": "holographicMemory.explainCapsule",
        "title": "Explain Capsule with Ollama",
        "category": "Holographic Memory"
      },
      {
        "command": "holographicMemory.rebuildIndex",
        "title": "Rebuild FAISS Index",
        "category": "Holographic Memory"
      },
      {
        "command": "holo.openGraph",
        "title": "Holo: Open Graph"
      },
      {
        "command": "holo.indexWorkspace",
        "title": "Holo: Index Workspace"
      },
      {
        "command": "holo.queryMemory",
        "title": "Holo: Query Memory"
      },
      {
        "command": "holo.rebuildANN",
        "title": "Holo: Rebuild ANN (FAISS)"
      },
      {
        "command": "holo.gotoCapsule",
        "title": "Holo: Go to Capsule Definition"
      },
      {
        "command": "holo.explainCapsule",
        "title": "Holo: Explain Capsule (Ollama)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "holo",
          "title": "Holo",
          "icon": "$(database)"
        }
      ]
    },
    "views": {
      "holo": [
        {
          "id": "holoMemoryExplorer",
          "name": "Memory Explorer"
        }
      ],
      "explorer": [
        {
          "id": "holographicMemoryExplorer",
          "name": "Memory System",
          "when": "holographicMemory:enabled"
        }
      ]
    },
    "menus": {
      "view/item/context": [
        {
          "when": "view == holoMemoryExplorer && viewItem == holoCapsule",
          "command": "holo.gotoCapsule",
          "group": "navigation@1"
        },
        {
          "when": "view == holoMemoryExplorer && viewItem == holoCapsule",
          "command": "holo.explainCapsule",
          "group": "inline@2"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/uuid": "^9.0.8",
    "@types/vscode": "^1.103.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "uuid": "^9.0.1"
  }
}
